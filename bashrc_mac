# 2009-09-30_at_19:22 make terminal got color
export CLICOLOR=1
export LSCOLORS=gxfxaxdxcxegedabagacad

# change prompt
export PS1="\w\$ "

echo $PATH | grep -q -s "/usr/local/share/python"
if [ $? -eq 1 ] ; then
    PATH=/usr/local/share/python:$PATH
    export PATH
fi

echo $PATH | grep -q -s "/usr/local/sbin"
if [ $? -eq 1 ] ; then
    PATH=/usr/local/sbin:$PATH
    export PATH
fi

echo $PATH | grep -q -s "/usr/local/bin"
if [ $? -eq 1 ] ; then
    PATH=/usr/local/bin:$PATH
    export PATH
fi

export LC_CTYPE=en_US.UTF-8

export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6.0/Home
export PATH=$PATH:$JAVA_HOME/bin

SVN_EDITOR=/usr/bin/vi
export SVN_EDITOR

export PYTHON_HOME=/Library/Frameworks/Python.framework/Versions/Current

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
set -o vi
export ANT_OPTS="-Xmx1024m -XX:MaxPermSize=256m"
source ~/.shortcut.sh

